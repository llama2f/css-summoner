    </div>
    <Menu client:load /> {/* client:load を追加 */}

    {variants.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-6 border-b pb-2">バリアント</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          
          <div class="border rounded-lg shadow-sm overflow-hidden">
            <div class="p-4 bg-neutral-100">
              <h3 class="text-lg font-medium">Ghost</h3>
              <code class="block text-sm text-neutral-700 mt-1">.infobox-ghost</code>
            </div>
            <div class="p-4">
              <p class="text-sm text-neutral-600 mb-4">背景も枠線も透明なスタイル。ホバーエフェクトなどで使用します。</p>
              <div class="bg-white p-6 rounded border border-dashed flex items-center justify-center min-h-[100px]">
