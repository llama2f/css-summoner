---
// src/css-summoner/components/astro/VariantPreview.astro
// 個々のコンポーネントバリアントを表示するためのカードコンポーネント

interface Props {
	variant: string // バリアント名 (例: "solid", "outline")
	className: string // 対応するCSSクラス名 (例: "btn-solid")
	description: string // バリアントの説明
	previewHtml: string // プレビュー表示用のHTML文字列
}

const { variant, className, description, previewHtml } = Astro.props

// バリアント名を整形 (例: "solid" -> "Solid", "icon-outline" -> "Icon Outline")
const formattedVariantName = variant
	.replace(/-/g, ' ')
	.replace(/\b[a-z]/g, (c) => c.toUpperCase())
---

<div class='flex flex-col items-start gap-3'>
	<h3 class='text-lg font-medium break-words'>{formattedVariantName}</h3>
	<Fragment set:html={previewHtml} />
	<code class='block text-sm mt-1 break-words'>.{className}</code>
	<p class='text-sm mb-4 break-words'>{description}</p>
</div>
