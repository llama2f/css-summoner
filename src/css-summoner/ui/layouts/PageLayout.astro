---
import Footer from '@layouts/Footer.astro'
import Head from '@layouts/Head.astro'
import Header from '@layouts/Header.astro'
import NavDrawer from '@components/navigation/NavDrawer.astro'
import siteData from '@configs/siteData.json'
import 'highlight.js/styles/dark.min.css'

// スタイルシートのインポート
import '@stylesCss/no-bundle/styles.css'

export interface Props {
	title: string
	desc: string
}

const { title = siteData.siteName, desc = siteData.siteDescription } =
	Astro.props

const mainClass = 'container mx-auto px-global py-global max-w-screen-2xl'
---

<html lang='ja'>
	<Head title={title} desc={desc} />
	<body>
		<Header />
		<NavDrawer />
		<main class={mainClass}>
			<slot />
		</main>
		<a href='/' class='btn-base btn-link btn-sm theme-inverse no-default'>
			← back to css-summoner
		</a>
		<Footer />
	</body>
</html>
