---
import Head from '@layouts/Head.astro'
import Header from '@layouts/Header.astro'
import Footer from '@layouts/Footer.astro'
export interface Props {
	title: string
	desc: string
}

const { title = 'title', desc = 'description' } = Astro.props

// スタイルシートのインポート
import '@stylesCss/styles.css'
import Menu from '@layouts/Menu.astro'

const mainClass = 'container mx-auto px-global max-w-screen-2xl'
---

<!doctype html>
<html lang='ja'>
	<Head title={title} desc={desc} />
	<body>
		<Header />
		<main class={mainClass}>
			<div class='mt-6'>
				<a href='/' class='text-primary hover:underline'>
					← クラスビルダーに戻る
				</a>
			</div>
			<Menu />
			<slot />
			<Menu />
			<div class='mt-6'>
				<a href='/' class='text-primary hover:underline'>
					← クラスビルダーに戻る
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
