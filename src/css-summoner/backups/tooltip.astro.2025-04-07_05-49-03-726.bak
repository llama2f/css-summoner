const pageTitle = "Tooltip コンポーネント";
const pageDesc = "Tooltip コンポーネントのスタイルバリエーションと使用例。";

// --- フロントマターに変数を渡す ---
const baseClassName = "tooltip-base"; // baseClassName を文字列として渡す
const variantsData = [{"variant":"default","className":"tooltip-default","description":"デフォルトスタイルのツールチップ。一般的な追加情報の表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-default\" data-tooltip=\"これは標準のツールチップです\">ホバーしてください</span>"},{"variant":"error","className":"tooltip-error","description":"エラーを示すスタイルのツールチップ。エラーメッセージの表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-error\" data-tooltip=\"エラー: 入力が不正です\">ホバーしてください</span>"},{"variant":"info","className":"tooltip-info","description":"情報を示すスタイルのツールチップ。補足情報の表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-info\" data-tooltip=\"情報: これは重要な情報です\">ホバーしてください</span>"},{"variant":"outline-default","className":"tooltip-outline-default","description":"枠線スタイルのデフォルトツールチップ。より控えめな表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-outline-default\" data-tooltip=\"これはアウトラインツールチップです\">ホバーしてください</span>"},{"variant":"outline-error","className":"tooltip-outline-error","description":"枠線スタイルのエラーツールチップ。控えめなエラーメッセージに使用します。","previewHtml":"<span class=\"tooltip-base tooltip-outline-error\" data-tooltip=\"エラー: 入力が不正です\">ホバーしてください</span>"},{"variant":"outline-info","className":"tooltip-outline-info","description":"枠線スタイルの情報ツールチップ。控えめな補足情報の表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-outline-info\" data-tooltip=\"情報: これは重要な情報です\">ホバーしてください</span>"},{"variant":"outline-success","className":"tooltip-outline-success","description":"枠線スタイルの成功ツールチップ。控えめなポジティブメッセージに使用します。","previewHtml":"<span class=\"tooltip-base tooltip-outline-success\" data-tooltip=\"成功: タスクが完了しました\">ホバーしてください</span>"},{"variant":"outline-warning","className":"tooltip-outline-warning","description":"枠線スタイルの警告ツールチップ。控えめな注意喚起に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-outline-warning\" data-tooltip=\"警告: この操作は取り消せません\">ホバーしてください</span>"},{"variant":"success","className":"tooltip-success","description":"成功を示すスタイルのツールチップ。ポジティブなメッセージの表示に使用します。","previewHtml":"<span class=\"tooltip-base tooltip-success\" data-tooltip=\"成功: タスクが完了しました\">ホバーしてください</span>"},{"variant":"warning","className":"tooltip-warning","description":"警告を示すスタイルのツールチップ。注意喚起のメッセージに使用します。","previewHtml":"<span class=\"tooltip-base tooltip-warning\" data-tooltip=\"警告: この操作は取り消せません\">ホバーしてください</span>"}]; // バリアントデータの配列を渡す
const exampleCode = `<span class="tooltip-base tooltip-default" data-tooltip="これは標準のツールチップです">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-info" data-tooltip="情報: これは重要な情報です">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-success" data-tooltip="成功: タスクが完了しました">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-warning" data-tooltip="警告: この操作は取り消せません">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-error" data-tooltip="エラー: 入力が不正です">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-outline-default" data-tooltip="これはアウトラインツールチップです">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-outline-info" data-tooltip="情報: これは重要な情報です">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-outline-success" data-tooltip="成功: タスクが完了しました">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-outline-warning" data-tooltip="警告: この操作は取り消せません">ホバーしてください</span>\n\n<span class="tooltip-base tooltip-outline-error" data-tooltip="エラー: 入力が不正です">ホバーしてください</span>\n\n<span class="tooltip-base" data-tooltip="これはツールチップです">ホバーしてください</span>`; // HTML文字列をテンプレートリテラル内で安全に展開
---

<DocLayout title={pageTitle} desc={pageDesc}>
		<div class="container mx-auto px-4 py-8">
			 <h1 class="text-3xl font-bold mb-4">{pageTitle}</h1>
			 <p class="text-lg text-neutral-600 mb-6">
			   ツールチップの基本スタイル。ホバーすると表示される追加情報を提供します。data-tooltip属性にツールチップのテキストを設定します。
			   {/* フロントマターの baseClassName を参照 */}
			   {baseClassName && <code class="ml-2 text-sm bg-neutral-200 p-1 rounded">.{baseClassName}</code>}
			 </p>
			 <div class="mb-6">
			   <a href="/" class="text-primary hover:underline">
			     ← back to css-summoner
			   </a>
			 </div>

			 {/* バリアントデータをループして VariantPreview コンポーネントを表示 */}
			 {variantsData.length > 0 && (
			   <section class="mb-12">
			     <h2 class="text-2xl font-semibold mb-6 border-b pb-2">バリアント</h2>
			     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			       {variantsData.map(variantProps => (
			         <VariantPreview {...variantProps} />
			       ))}
			     </div>
			   </section>
			 )}

			 <section class="mb-12">
			   <h2 class="text-2xl font-semibold mb-6 border-b pb-2">使用例</h2>
			   <div class="container-example">
			     {/* HTMLを直接レンダリング */}
			     <Fragment set:html={exampleCode} />
			   </div>
			 </section>

			 <div class="mt-6">
			   <a href="/" class="text-primary hover:underline">
			     ← クラスビルダーに戻る
			   </a>
			 </div>
		</div>
</DocLayout>
