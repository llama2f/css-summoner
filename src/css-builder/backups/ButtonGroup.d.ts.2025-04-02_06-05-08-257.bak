/**
 * ButtonGroup コンポーネントの型定義
 * @category interactive
 */

export interface ButtonGroupProps {
  /**
   * コンポーネントのバリアント
   * @default "group-vertical"
   */
  variant?: 'group-vertical';
  
  /**
   * コンポーネントのサイズ
   * @default ""
   */
  size?: string;
  
  /**
   * 角丸の設定
   */
  radius?: string;
  
  /**
   * 追加のモディファイア
   * @example ["shadow", "animate-up"]
   */
  modifiers?: Array<string>;
  
  /**
   * 追加のCSSクラス
   */
  addClass?: string;
  
  /**
   * 子要素
   */
  children?: any;
}
