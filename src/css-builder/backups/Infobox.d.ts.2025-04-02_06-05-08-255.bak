/**
 * Infobox コンポーネントの型定義
 * @category notification
 */

export interface InfoboxProps {
  /**
   * コンポーネントのバリアント
   * @default "with-icon"
   */
  variant?: 'with-icon' | 'info' | 'success' | 'warning' | 'error' | 'note' | 'outline' | 'bordered' | 'shadow' | 'square' | 'icon' | 'title' | 'compact';
  
  /**
   * コンポーネントのサイズ
   * @default ""
   */
  size?: string;
  
  /**
   * 角丸の設定
   */
  radius?: string;
  
  /**
   * 追加のモディファイア
   * @example ["shadow", "animate-up"]
   */
  modifiers?: Array<string>;
  
  /**
   * 追加のCSSクラス
   */
  addClass?: string;
  
  /**
   * 子要素
   */
  children?: any;
}
