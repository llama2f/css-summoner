{
	"extends": "astro/tsconfigs/base",
	"include": [".astro/types.d.ts", "**/*", ".postcss.config.mjs"],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"@components/*": ["src/css-builder/components/*"],
			"@layouts/*": ["src/css-builder/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@stylesCss/*": ["src/css-builder/styles/*"],
			"@config/*": ["src/css-builder/config/*"],
			"@data/*": ["src/css-builder/data/*"],
			"@scripts/*": ["src/css-builder/scripts/*"],
			"@assets/*": ["src/assets/*"],
			"@images/*": ["src/assets/images/*"],
			"@/*": ["./src/*"],
			"@@/*": ["./*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
